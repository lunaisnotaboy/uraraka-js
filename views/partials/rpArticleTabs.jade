md-toolbar.rp-tab-toolbar.rp-article-tab-toolbar(
	md-scroll-shrink
	md-shrink-speed-factor="0.5"
	layout="row"
	ng-class="{'rp-animation-article-tabs': animations}"
)
	md-tabs.rp-tabs(md-stretch-tabs="always", md-selected="selectedIndex", flex)
		md-tab.rp-tab(ng-repeat="tab in tabs", aria-controls="{{tab.label}}", label="{{tab.label}}", md-on-select="tabClick(tab.value)")
