md-toolbar.rp-search-tab-toolbar(ng-controller="rpSearchTabsCtrl", md-scroll-shrink, md-shrink-speed-factor="0.5", layout="row", ng-class="{'rp-search-tab-toolbar-show': type === 'link'}")
	md-tabs.rp-tabs(md-stretch-tabs="always", md-selected="selectedIndex", flex)
		md-tab.rp-tab(aria-controls="relevance", label="Relevance", md-on-select="tabClick('relevance')")
		md-tab.rp-tab(aria-controls="top", label="Top", md-on-select="tabClick('top')")
		md-tab.rp-tab(aria-controls="new", label="New", md-on-select="tabClick('new')")
		md-tab.rp-tab(aria-controls="comments", label="Comments", md-on-select="tabClick('comments')")

md-content.rp-content#rp-content(flex, rp-infinite-scroll, rp-infinite-scroll-div="#rp-subreddit-posts", rp-infinite-scroll-distance="3")

	.rp-search-content-switch(ng-switch="type")


		.rp-search-content-link(ng-switch-when="link")
			.rp-subreddit-posts.rp-column-resize#rp-subreddit-posts(layout="row", ng-if="posts")
				.rp-posts-wrapper(layout="row")
					.rp-posts-col(layout="column", ng-repeat="column in columns")
						rp-search-link(ng-repeat="post in posts", ng-if="columns.length == 1 || $index % columns.length == $parent.$index")
			p.rp-search-nothing(ng-if="nothingPosts") No links found :(
			p.rp-content-eol(ng-if="noMorePosts") No more links.


		
		.rp-search-content-sub(ng-switch-when="sr")
			.rp-subreddit-posts.rp-column-resize#rp-subreddit-posts(layout="row", ng-if="posts")
				.rp-posts-wrapper(layout="row")
					.rp-posts-col(layout="column", ng-repeat="column in columns")
						rp-search-sub(ng-repeat="post in posts", ng-if="columns.length == 1 || $index % columns.length == $parent.$index")
			p.rp-search-nothing(ng-if="nothingPosts") No subreddits found :(
			p.rp-content-eol(ng-if="noMorePosts") No more subreddits.


		.rp-search-content-sublink(ng-switch-when="sr, link")
			
			.rp-subreddit-posts.rp-column-resize(layout="row", ng-if="subs && !nothingSubs")
				.rp-posts-wrapper(layout="column")
					p.rp-search-srlink-heading(ng-if="haveSubs") Subreddits
					.rp-posts-wrapper-inner(layout="row")
						.rp-posts-col(layout="column", ng-repeat="column in columns")
							rp-search-sub(ng-repeat="post in subs", ng-if="columns.length == 1 || $index % columns.length == $parent.$index")
			p.rp-search-nothing(ng-if="nothingSubs") No subreddits found :(
			p.rp-content-eol(ng-if="noMorePosts") No more subreddits.

			.rp-subreddit-posts.rp-column-resize(layout="row", ng-if="links && !nothingLinks")
				.rp-posts-wrapper(layout="column")
					p.rp-search-srlink-heading(ng-if="haveLinks") Links
					.rp-posts-wrapper-inner(layout="row")
						.rp-posts-col(layout="column", ng-repeat="column in columns")
							rp-search-link(ng-repeat="post in links", ng-if="columns.length == 1 || $index % columns.length == $parent.$index")				}
			p.rp-search-nothing(ng-if="nothingLinks") No links found :(
			p.rp-content-eol(ng-if="noMorePosts") No more links.