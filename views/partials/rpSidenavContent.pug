	md-divider

	.rp-subreddit-form(ng-controller="rpGotoSubredditsCtrl")
		md-button.rp-sidenav-button(ng-click="toggleOpen($event)")
			md-icon.rp-sidenav-icon(md-svg-icon="ic_forward_black_24px")
			span Goto Subreddit
			md-icon.rp-sidenav-icon.rp-sidenav-expando-icon(
				md-svg-icon="ic_keyboard_arrow_down_black_24px"
				ng-class="{'rp-animation-sidenav-expando-icon-open': isOpen, 'rp-animation-sidenav-expando-icon': animations}"
			)

		form.rp-search-sidenav-form(
			name="rpGotoSubredditForm"
			ng-controller="rpGotoSubredditFormCtrl"
			ng-submit="GotoSubredditFormSubmit($event)"
			layout="row"
			ng-if="isOpen"
		)
			md-input-container.md-accent(flex)
				label Subreddit
				input(
					required
					placeholder="r/"
					ng-model="s"
					rp-focus-me="focusInput"
				)
			md-button.md-fab.rp-post-fab#send(type='submit', aria-label="post comment", ng-if="s")
				md-icon.rp-post-fab-icon(md-svg-icon="ic_send_24px")
				md-tooltip(hide, show-gt-sm, rp-simple-suspendable) go to subreddit


	.rp-sidenav-search(ng-controller="rpSearchSidenavCtrl")
		md-button.rp-sidenav-button(ng-click="toggleOpen($event)")
			md-icon.rp-sidenav-icon(md-svg-icon="ic_search_black_24px")
			span Search
			md-icon.rp-sidenav-icon.rp-sidenav-expando-icon(
				md-svg-icon="ic_keyboard_arrow_down_black_24px"
				ng-class="{'rp-animation-sidenav-expando-icon-open': isOpen, 'rp-animation-sidenav-expando-icon': animations}"
			)

		rp-search-sidenav-form(ng-if="isOpen", ng-class="{'rp-animation-searchform': animations}")

	.rp-sidenav-settings(ng-controller="rpSettingsSidenavCtrl")
		md-button.rp-sidenav-button(ng-click="showSettings($event)")
			md-icon.rp-sidenav-icon(md-svg-icon="ic_settings_black_24px")
			span Settings

	.rp-sidenav-feedback(ng-controller="rpFeedbackSidenavCtrl")
		md-button.rp-sidenav-button(ng-click="showFeedback($event)")
			md-icon.rp-sidenav-icon(md-svg-icon="ic_announcement_black_24px")
			span Send Feedback

	md-divider

	.rp-sidenav-message(ng-if="authenticated", ng-controller="rpMessageSidenavCtrl")
		md-button.rp-sidenav-button(ng-click="toggleOpen()")
			md-icon.rp-sidenav-icon(
				md-svg-icon="ic_mail_black_24px"
				ng-class="{'rp-sidenav-message-hasmail': hasMail === true}"
			)
			span Messages
			md-icon.rp-sidenav-icon.rp-sidenav-expando-icon(
				md-svg-icon="ic_keyboard_arrow_down_black_24px"
				ng-class="{'rp-animation-sidenav-expando-icon-open': isOpen, 'rp-animation-sidenav-expando-icon': animations}"
			)
			//- md-icon.rp-sidenav-icon.rp-sidenav-expando-icon(md-svg-icon="ic_keyboard_arrow_down_black_24px", ng-if="!isOpen")
			//- md-icon.rp-sidenav-icon.rp-sidenav-expando-icon(md-svg-icon="ic_keyboard_arrow_up_black_24px", ng-if="isOpen")
		.rp-sidenav-message-menu(ng-if="isOpen", ng-class="{'rp-animation-messages-menu': animations}")
			md-button.rp-sidenav-message-button(ng-click="showInbox($event)") Inbox
			md-button.rp-sidenav-message-button(ng-click="showCompose($event)") Compose
			md-button.rp-sidenav-message-button(ng-click="showSent($event)") Sent


