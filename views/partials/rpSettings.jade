.rp-settings(flex, layout-padding, layout="column", layout-align="center center")
	
	.rp-setting-inset.inset
		.rp-setting-over18(layout="row", layout-align="start center")
			md-label NSFW Warning 
			span(flex)
			md-switch.md-accent.rp-settings-switch(ng-model="settings.over18", aria-label="over18", ng-change="settingChanged()")

		.rp-setting-compose(layout="row", layout-align="start center")
			md-label Open compose message in a new window
			span(flex)
			md-switch.md-accent.rp-settings-switch(ng-model="settings.composeWindow", aria-label="composeWindow", ng-change="settingChanged()")