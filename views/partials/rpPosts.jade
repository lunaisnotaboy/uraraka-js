div(infinite-scroll="morePosts()", infinite-scroll-container="'#rp-content'", infinite-scroll-distance="4")
	.rp-subreddit-posts(layout="row", layout-margin, ng-if="posts")
		.rp-posts-col(layout="column", flex, ng-repeat="column in columns")
			.rp-card(ng-repeat="post in posts", ng-if="$index % columns.length == $parent.$index")
				md-card
					rp-post
