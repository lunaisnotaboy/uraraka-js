rp-tabs(parent-ctrl="thisController", tabs="tabs", selected-index="selectedTab")

md-content.rp-content#rp-content(flex, rp-infinite-scroll, rp-infinite-scroll-div="#rp-subreddit-posts", rp-infinite-scroll-distance="4")
	.rp-subreddit-posts.rp-column-resize#rp-subreddit-posts(layout="row", masonry="{transitionDuration: 0, isFitWidth: true}", preserve-order, reload-on-resize, column-width="384px")
		.masonry-brick(ng-repeat="post in posts")
			rp-link(post="post", index="{{$index}}" parent-ctrl="thisController", identity="identity", show-sub="showSub")
				
				
				//- .rp-post-sort-switch(ng-switch="sort === 'gilded'")
					rp-user-post(ng-switch-when="true", ng-repeat="post in posts", ng-if="columns.length == 1 || $index % columns.length == $parent.$index")
					rp-post(ng-switch-when="false", ng-repeat="post in posts", ng-if="columns.length == 1 || $index % columns.length == $parent.$index")

	p.rp-content-eol(ng-if="noMorePosts") No more posts.

.rp-fab(ng-controller="rpPostFabCtrl")
	//- mfb-menu(position="br", effect="slidein", label="submit to reddit", active-icon="mdi mdi-close", resting-icon="mdi mdi-pencil", toggling-method="hover", menu-state="fabState")
	mfb-menu(position="br", effect="slidein", label="submit to reddit", active-icon="mdi mdi-close", resting-icon="mdi mdi-plus", toggling-method="hover", menu-state="fabState")
		button(mfb-button, icon="mdi mdi-link", label="submit a new link", ng-click="newLink()")
		button(mfb-button, icon="mdi mdi-view-headline", label="submit a new text post", ng-click="newText()")
