.rp-search-more-switch(ng-switch="post.more")

	.rp-search-more-true(ng-switch-when="true")

		.rp-search-more
			md-button.md-default.md-fab(ng-click="showMore()")
				md-icon(md-svg-src="../icons/ic_arrow_forward_black_48px.svg")
					md-tooltip more subreddits

	.rp-search-more-false(ng-switch-default)
		md-card.rp-post

			.rp-post-header(layout-padding, layout="row")

				.rp-post-header-content(flex)
					p.rp-search-sub-title {{::post.data.title | rp_clean_title}}
					a.rp-search-sub-link(ng-href="post.data.url") {{post.data.url}}
					.rp-post-header-details
						span.rp-search-sub-subcribers(ng-if="post.data.subscribers") {{::post.data.subscribers}} subscribers
						span(ng-if="post.data.subscribers && post.data.created") , 
						span(ng-if="post.data.created_utc") created 
						span(am-time-ago="::post.data.created_utc")

			.rp-search-sub-description(ng-if="::post.data.description_html", layout-padding)
				p(ng-bind-html="::post.data.description_html |  limitTo: 500 | rp_unescape_embed")
			
			md-divider

			.rp-search-sub-actions(layout-padding, layout="row", layout-align="space-around center")
				
				md-button.md-fab.rp-post-fab#subscribe(aria-label="subscribe", ng-click="subscribeSub(post)")
					md-icon.rp-post-fab-icon(md-svg-src="../../icons/ic_check_box_outline_blank_24px.svg")

				md-button.md-fab.rp-post-fab#search(aria-label="search", ng-click="searchSub($event, post)")
					md-icon.rp-post-fab-icon(md-svg-src="../../icons/ic_search_24px.svg")
		
		

	//- .rp-post-reply(layout-padding)
		form.rp-post-reply-form(name="rpPostReplyForm", ng-submit="postReply(post.data.name, reply)", layout="row", ng-controller="rpPostReplyCtrl")
			md-input-container.md-accent(flex)
				input(placeholder="Post a reply", ng-model="reply")
			md-button.md-fab.rp-post-fab#send(aria-label="post reply", ng-if="reply")
				md-icon.rp-post-fab-icon(md-svg-src="../../icons/ic_send_24px.svg")

				//- label.rp-post-reply-label Post a reply
