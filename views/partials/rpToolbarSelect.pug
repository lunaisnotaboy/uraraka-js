md-select.md-no-underline(
	ng-model="selection"
	ng-model-options="{trackBy: '$value.value'}"
	ng-change="select()"
	aria-label="{{ariaLabel}}"
	ng-show="selection"

)
	md-option.rp-select-option(
		ng-repeat="option in options"
		ng-value="option"
	)
		span.rp-select-option-label {{option.label | uppercase}}