.rp-imgur-album-controls
	p.rp-imgur-album-controls-count Image {{currentImage}} of {{album.data.images_count}}

.rp-image-album-wrapper
	img.rp-imgur-album-image(ng-src="{{currentImageUrl}}")
	md-button.rp-image-album-button-before(ng-click="prev(album.data.images_count)", aria-label="prev")
		core-icon(icon="image:navigate-before")
	md-button.rp-image-album-button-next(ng-click="next(album.data.images_count)", aria-label="next")
		core-icon(icon="image:navigate-next")

.rp-imgur-album-details(layout-padding)
	p.rp-imagur-album-image-title {{imageTitle}}
	p.rp-imagur-album-image-description {{imageDescription}}
