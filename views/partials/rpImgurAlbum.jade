.rp-imgur-album-controls
	p.rp-imgur-album-controls-count Image {{currentImage}} of {{album.data.images_count}}

.rp-imgur-album-wrapper
	img.rp-imgur-album-image(ng-src="{{currentImageUrl}}")
	md-button.rp-imgur-album-button-before(ng-click="prev(album.data.images_count)", aria-label="prev")
		md-icon.rp-imgur-album-icon-before(md-svg-src="../../icons/ic_chevron_left_24px.svg")
	md-button.rp-imgur-album-button-next(ng-click="next(album.data.images_count)", aria-label="next")
		md-icon.rp-imgur-album-icon-next(md-svg-src="../../icons/ic_chevron_right_24px.svg")

.rp-imgur-details(layout-padding)
	p.rp-imgur-album-image-title {{imageTitle}}
	p.rp-imgur-album-image-description {{imageDescription}}
