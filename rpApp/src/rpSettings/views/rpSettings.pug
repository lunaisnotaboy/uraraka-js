md-content.rp-content.rp-settings-content(md-theme="{{settingsCtrl.settings.theme}}")
  .rp-settings-title(layout-padding, ng-if="isDialog")
    p settings

  md-content.rp-settings-body(layout-padding, layout="column", layout-align="start center")
    .rp-setting-inset
      .rp-settings-theme(layout="row", layout-align="start center")
        md-label Theme
        span(flex)
        md-select.rp-settings-theme-select(ng-model="settingsCtrl.settings.theme", ng-change="settingChanged()", aria-label="theme")
          md-option.rp-settings-theme-option(ng-repeat="theme in themes", value="{{theme.value}}") 

      .rp-setting-font-size(layout="row", layout-align="start center")
        md-label Font Size
        span(flex)
        md-select.rp-settings-font-size-select(ng-model="settingsCtrl.settings.fontSize", ng-change="settingChanged()", aria-label="font size")
          md-option.rp-settings-font-size-option(ng-repeat="fontSize in fontSizes", value="{{fontSize.value}}") {{fontSize.name}}

      .rp-setting-settings(layout="row", layout-align="start center")
        md-label Open settings in a dialog
        span(flex)
        md-switch.md-accent.rp-settings-switch(ng-model="settingsCtrl.settings.settingsDialog", aria-label="settings dialog", ng-change="settingChanged()")

      .rp-setting-comments(layout="row", layout-align="start center")
        md-label Open comments in a dialog
        span(flex)
        md-switch.md-accent.rp-settings-switch(ng-model="settingsCtrl.settings.commentsDialog", aria-label="comments dialog", ng-change="settingChanged()")

      .rp-setting-submit(layout="row", layout-align="start center")
        md-label Open submit in a dialog
        span(flex)
        md-switch.md-accent.rp-settings-switch(ng-model="settingsCtrl.settings.submitDialog", aria-label="submit dialog", ng-change="settingChanged()")

      .rp-setting-compose(layout="row", layout-align="start center")
        md-label Compose in a dialog
        span(flex)
        md-switch.md-accent.rp-settings-switch(ng-model="settingsCtrl.settings.composeDialog", aria-label="compose dialog", ng-change="settingChanged()")

      .rp-setting-over18(layout="row", layout-align="start center")
        md-label NSFW Warning 
        span(flex)
        md-switch.md-accent.rp-settings-switch(ng-model="settingsCtrl.settings.over18", aria-label="nsfw warning", ng-change="settingChanged()")

      .rp-setting-animations(layout="row", layout-align="start center")
        md-label Animations
        span(flex)
        md-switch.md-accent.rp-settings-switch(ng-model="settingsCtrl.settings.animations", aria-label="nsfw warning", ng-change="settingChanged()")
