md-sidenav.md-sidenav-right.md-whiteframe-z2.rp-sidebar(md-component-id="right")
  .rp-sidebar
    md-toolbar.md-theme-light.rp-sidebar-toolbar
      .md-toolbar-tools
        h1 {{sidebarCtrl.about.data.display_name}}
        span(flex)
        rp-subscribe

    md-content(layout-padding)
      .rp-sidebar-header(layout-padding, layout="row")
        span.srp-readers(flex) {{sidebarCtrl.about.data.subscribers | number}} readers
        span.rp-here(flex) {{sidebarCtrl.about.data.accounts_active | number}} here
      .rp-sidebar-description
        p(ng-bind-html="sidebarCtrl.about.data.description_html | rpAppOpenLinkNewWindowFilter | rpAppUnescapeEmbedFilter")
